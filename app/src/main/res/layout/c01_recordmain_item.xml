<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/c001_cirle_background">

            <ImageView
                android:id="@+id/viewholder_itemtypeimg"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_food"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/viewholder_itemname"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Item Name"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/viewholder_itemtype"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="13dp"
                android:text="TYPE"
                android:textColor="#7E7E7E"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:tint="@color/text_color_1"
                android:src="@mipmap/ic_delete"/>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewholder_itemprice"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center|right"
            android:textSize="18dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="$47.66"
            android:textColor="@color/text_color_1"/>

        <TextView
            android:id="@+id/viewholder_itemremarks"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:gravity="center|left"
            android:textSize="15dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="dsadsadshadsklahlkdhlkhslkahdklhklsahdklhlkslakhldkhlkhsklahklhdlk
dshakjdhkjhsakjdhjkshakd
gdgksjagdkj
"
            android:textColor="@color/text_color_2"/>

    </LinearLayout>


</LinearLayout>