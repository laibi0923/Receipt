<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center|top">




        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/viewholder_itemname"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Item Name"
                android:textSize="18dp"
                android:textColor="#FFFFFF"/>


            <TextView
                android:id="@+id/viewholder_itemprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="$47.66"
                android:textColor="@color/text_color_1"/>



            <TextView
                android:id="@+id/viewholder_itemremarks"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="13dp"
                android:text="sahfkljkldjklsajskajkldjkljsakdjkljsklakldjklsjakldjlkjsalkjdjslak
dsjakljdkljlaksjlkdjljsalkd
dkjsakljdlkjkslaj
dkjsalkdjlkasjlkd"
                android:textColor="#7E7E7E"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/viewholder_itemtypeimg"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_food"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_delete"
                android:tint="@color/text_color_1" />

        </LinearLayout>


    </LinearLayout>




</LinearLayout>