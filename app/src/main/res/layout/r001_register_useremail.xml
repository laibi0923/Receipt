<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:gravity="top|center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="50dp"
            android:src="@mipmap/ic_question_mark"
            android:tint="@color/text_color_1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="電郵"
            android:padding="10dp"
            android:textColorHint="@color/text_color_2"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/back_btn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close_btn1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_back_btn"
            android:tint="@color/text_color_1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_next_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:rotation="180">

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_back_btn"
            android:tint="@color/text_color_1"/>

    </LinearLayout>

</RelativeLayout>