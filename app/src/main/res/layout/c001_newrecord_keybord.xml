<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@color/colorPrimary">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:visibility="visible"
		android:layout_weight="1.0">

		<TableLayout
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:stretchColumns="*"
			android:layout_weight="3">



			<View
				android:visibility="gone"
				android:background="?android:attr/dividerVertical"
				android:layout_height="1dp"
				android:layout_width="match_parent"/>

			<TableRow
				android:layout_weight="1">

				<RelativeLayout
					android:id="@+id/numberpad_1"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:gravity="center">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="1"
						android:textColor="#FFFFFF"
						android:textSize="20sp" />

				</RelativeLayout>

				<RelativeLayout
					android:id="@+id/numberpad_2"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:gravity="center">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="2"
						android:textColor="#FFFFFF"
						android:textSize="20sp" />

				</RelativeLayout>

				<RelativeLayout
					android:id="@+id/numberpad_3"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:gravity="center">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="3"
						android:textColor="#FFFFFF"
						android:textSize="20sp" />

				</RelativeLayout>

			</TableRow>

			<TableRow
				android:layout_weight="1">

				<RelativeLayout
					android:id="@+id/numberpad_4"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:gravity="center">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="4"
						android:textColor="#FFFFFF"
						android:textSize="20sp" />

				</RelativeLayout>

				<RelativeLayout
					android:id="@+id/numberpad_5"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:gravity="center">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="5"
						android:textColor="#FFFFFF"
						android:textSize="20sp" />

				</RelativeLayout>

				<RelativeLayout
					android:id="@+id/numberpad_6"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:gravity="center">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="6"
						android:textColor="#FFFFFF"
						android:textSize="20sp" />

				</RelativeLayout>

			</TableRow>

			<TableRow
				android:layout_weight="1">

				<RelativeLayout
					android:id="@+id/numberpad_7"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:gravity="center">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="7"
						android:textColor="#FFFFFF"
						android:textSize="20sp" />

				</RelativeLayout>

				<RelativeLayout
					android:id="@+id/numberpad_8"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:gravity="center">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="8"
						android:textColor="#FFFFFF"
						android:textSize="20sp" />

				</RelativeLayout>

				<RelativeLayout
					android:id="@+id/numberpad_9"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:gravity="center">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="9"
						android:textColor="#FFFFFF"
						android:textSize="20sp" />

				</RelativeLayout>

			</TableRow>

			<TableRow
				android:layout_weight="1">

				<RelativeLayout
					android:id="@+id/numberpad_00"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:gravity="center">
 
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="00"
						android:textColor="#FFFFFF"
						android:textSize="20sp" />

				</RelativeLayout>

				<RelativeLayout
					android:id="@+id/numberpad_0"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:gravity="center">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="0"
						android:textColor="#FFFFFF"
						android:textSize="20sp" />

				</RelativeLayout>

				<RelativeLayout
					android:id="@+id/numberpad_dec"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:gravity="center">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="."
						android:textColor="#FFFFFF"
						android:textSize="20sp" />

				</RelativeLayout>
				

			</TableRow>
			
			<TableRow
				android:layout_weight="1">
				
				<RelativeLayout
					android:id="@+id/numberpad_del"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:background="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:gravity="center">

					<ImageView
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:src="@mipmap/ic_backspace"
						android:tint="@color/text_color_1" />


				</RelativeLayout>
			</TableRow>

		</TableLayout>

		<View
			android:background="?android:attr/dividerHorizontal"
			android:layout_height="match_parent"
			android:layout_width="1dp"/>

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:orientation="vertical"
			android:layout_weight="1.0">

			<RelativeLayout
				android:id="@+id/numberpad_divide"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:background="?android:attr/selectableItemBackground"
				android:clickable="true"
				android:gravity="center">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="รท"
					android:textColor="#FFFFFF"
					android:textSize="20sp" />

			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/numberpad_multiply"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:background="?android:attr/selectableItemBackground"
				android:clickable="true"
				android:gravity="center">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="ร"
					android:textColor="#FFFFFF"
					android:textSize="20sp" />

			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/numberpad_subtract"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:clickable="true"
				android:background="?android:attr/selectableItemBackground"
				android:layout_weight="1.0"
				android:gravity="center">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="-"
					android:gravity="center"
					android:textColor="#FFFFFF"
					android:textSize="20sp"/>

			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/numberpad_plus"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:clickable="true"
				android:background="?android:attr/selectableItemBackground"
				android:layout_weight="1.0"
				android:gravity="center">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="+"
					android:gravity="center"
					android:textColor="#FFFFFF"
					android:textSize="20sp"/>

			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/numberpad_equal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:background="?android:attr/selectableItemBackground"
				android:clickable="true"
				android:gravity="center">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="="
					android:textColor="#FFFFFF"
					android:textSize="20sp" />

			</RelativeLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

